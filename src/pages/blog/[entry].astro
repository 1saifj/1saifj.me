---
import BlogArticle from '@/screens/blog/Article.astro'
import BlogLayout from '@/layouts/Blog.astro'

import { loadArticles, type Article } from '@/api/articles'
import { withSeoOptions, Common } from '@/site.config'
import { formatDate } from '@/utils'

export interface Props {
  article: Article
}

export async function getStaticPaths() {
  const articlesRaw = await loadArticles()

  return articlesRaw.map((article) => ({
    params: { entry: article.slug },
    props: { article }
  }))
}

const { article } = Astro.props
const { title, description, createdAt, updatedAt } = article.frontmatter

const props = withSeoOptions({
  title: `${title} â€“ ${Common.title}`,
  description,
  openGraph: {
    basic: {
      title,
      type: 'article',
      url: Astro.url.href
    },
    article: {
      authors: ['Vladislav Mamon'],
      publishedTime: formatDate(createdAt, 'yyyy-LL-dd'),
      ...updatedAt && {
        modifiedTime: formatDate(updatedAt, 'yyyy-LL-dd')
      }
    }
  }
})
---

<BlogLayout {...props}>
  <BlogArticle article={article} />
</BlogLayout>
